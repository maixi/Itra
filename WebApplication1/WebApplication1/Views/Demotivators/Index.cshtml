@model IEnumerable<WebApplication1.Demotivator>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table">
    <tr>
        <th>
            @Html.Label(Resources.Resource.DemoName)
        </th>
        <th>
            @Html.Label(Resources.Resource.DemoRate)
        </th>
        <th>
            @Html.Label(Resources.Resource.DemoDate)
        </th>
        <th>
            @Html.Label(Resources.Resource.CreatorName)
        </th>
        <th>
            @Html.Label(Resources.Resource.DemoUrl)
        </th>
        <th>
            @Html.Label(Resources.Resource.OriginalDemoUrl)
        </th>
        <th>
            @Html.Label(Resources.Resource.TopLine)
        </th>
        <th>
            @Html.Label(Resources.Resource.BottomLine)
        </th>
        <th>
            @Html.Label(Resources.Resource.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DemotivatorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DemotivatorUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginalImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TopLine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BottomLine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser.Email)
            </td>
            <td>
                @Html.ActionLink(Resources.Resource.DemoEdit, "Edit", new { id = item.Id }) |
                @Html.ActionLink(Resources.Resource.DemoDetails, "Details", new { id = item.Id }) |
                @Html.ActionLink(Resources.Resource.Delete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
