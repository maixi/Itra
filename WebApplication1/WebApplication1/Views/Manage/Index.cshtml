@model WebApplication1.Models.IndexViewModel

@{
    ViewBag.Title = Resources.Resource.Management ;
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>@Resources.Resource.ChangeParams</h4>      
    <h4>
        @Resources.Resource.PassWord:
        @if (Model.HasPassword)
            {
            @Html.ActionLink(Resources.Resource.ChangePassword, "ChangePassword")
        }
        else
        {
            @Html.ActionLink(Resources.Resource.Create, "SetPassword")
        }
    </h4>
               
   <label>@Resources.Resource.Click @Html.ActionLink(Resources.Resource.Here, "UserAccount/" + @Model.userId, "Account") @Resources.Resource.ProfileOpen</label>
   
    
</div>
