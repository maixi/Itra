@model WebApplication.Demotivator

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #canvas-container {
        position: relative;
        width: 500px;
        height: 350px;
        box-shadow: 0 0 5px 1px black;
        margin: 10px auto;
        border: 5px solid transparent;
    }

        #canvas-container.over {
            border: 1px dashed #000000;
        
</style>

@if (!User.Identity.IsAuthenticated)
{
    <div>PLease, log in</div>
}
else
{
<h2>@Resources.Resource.Create</h2>

    using (Html.BeginForm())
    {
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>@Resources.Resource.Demotivator</h4>
        <hr />
        <div class="col-sm-6">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label(Resources.Resource.DemoName, htmlAttributes: new { @class = "control-label col-md-2" })

                <div class="col-md-10">
                    @Html.EditorFor(model => model.DemotivatorName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DemotivatorName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label(Resources.Resource.DemoRate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Rate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label(Resources.Resource.DemoUrl, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DemotivatorUrl, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DemotivatorUrl, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label(Resources.Resource.OriginalDemoUrl, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.OriginalImageUrl, new { htmlAttributes = new { @class = "form-control" , id = "url2"} })
                    @Html.ValidationMessageFor(model => model.OriginalImageUrl, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label(Resources.Resource.TopLine, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TopLine, new { htmlAttributes = new { @class = "form-control", id = "str11" } })
                    @Html.ValidationMessageFor(model => model.TopLine, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label(Resources.Resource.BottomLine, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BottomLine, new { htmlAttributes = new { @class = "form-control" , id = "str22"} })
                    @Html.ValidationMessageFor(model => model.BottomLine, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value=@Resources.Resource.Create class="btn btn-default" />
                    <input type="button" value="Preview" id="textin" class="btn btn-default" />
                </div>
            </div>
            @Html.ActionLink(Resources.Resource.BackToList, "Index")
        </div>
        <div class="col-sm-6">
            <div id="canvas-container">
                <canvas id="canvas" width="500" height="350"></canvas>
            </div>
        </div>  

    </div>
    }
}
<script src="~/Scripts/fabric.js"></script>
<script src="~/Scripts/Demo.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
